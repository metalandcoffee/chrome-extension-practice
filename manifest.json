{
	"manifest_version": 3,
	"name": "Headbanger's Ball Helper",
	"version": "1.0",
	"description": "Display current YouTube video in MetalAndCoffee_'s Twitch chat",
	"icons": {
		"16": "images/logo-16.png",
		"32": "images/logo-32.png",
		"48": "images/logo-48.png",
		"128": "images/logo-128.png"
	},
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"matches": ["https://www.youtube.com/watch*"]
		}
	]
}
